<%= form_with(model: todo, local: true) do |form| %>    
  

  <div class="form-group row">
  <%= form.label :title, class:"col-sm-1 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :title ,placeholder:"Enter title", class:"form-control" %>
    </div>
  </div>

  <br>
  <div class="form-group row">
    <%= form.label :description, class:"col-sm-1 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_area :description ,placeholder:"Enter Description(optional)", class:"form-control" %>
    </div>
  </div>

  <br>
  <div class="form-group row">
    <%= form.label :email, class:"col-sm-1 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :email ,placeholder:"Enter email(optional, to avail reminder facility)", class:"form-control" %>
    </div>
  </div>

  <br>
  <div class="form-group row">
    <%= form.label :time, class:"col-sm-1 col-form-label" %>
    <div class="col-sm-10">
      <%= form.datetime_select :time %>
    </div>
  </div>

  <br>
  <div class="form-group row">
    <%= form.label :reminder, class:"col-sm-1 col-form-label" %>
    <div class="col-sm-10">
      <%= form.check_box :reminder %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :status, class:"col-sm-1 col-form-label" %>
    <div class="col-sm-10">
      <%= form.check_box :status %>
    </div>
  </div>

  <br>
  <div class="actions">
    <%= form.submit%>
  </div>
<% end %>